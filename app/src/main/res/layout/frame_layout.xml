<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="@dimen/biggest_width"
        android:layout_height="@dimen/biggest_height"
        android:background="@color/violet"
        android:layout_gravity="center"/>
    <View
        android:layout_width="@dimen/medium_width"
        android:layout_height="@dimen/medium_height"
        android:background="@color/green_dark"
        android:layout_gravity="center"/>
    <View
        android:layout_width="@dimen/smallest_width"
        android:layout_height="@dimen/smallest_height"
        android:background="@color/yellow"
        android:layout_gravity="center"/>
</FrameLayout>